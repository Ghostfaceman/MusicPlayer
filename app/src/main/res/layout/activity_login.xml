<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#CD2626">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Card_QQLogin"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorAccent">
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="QQ登录"
        android:textSize="15sp"
        android:textColor="#EE6363"
        android:onClick="buttonQQLogin"
        android:background="#FFFFFF"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Card_QQLogin"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="25dp"
        android:id="@+id/Card_PhoneLogin"
        >
        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:onClick="buttonPhoneLogin"
            android:text="一键登录"
            android:textColor="#EE6363"
            android:textSize="15sp"
            android:background="#FFFFFF"
            />
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Card_PhoneLogin">
    <CheckBox
        android:id="@+id/cb_xy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请勾选并同意用户隐私协议"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:checked="true"
        />
    </RelativeLayout>

</RelativeLayout>